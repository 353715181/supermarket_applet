.van-card {
    background-color: #ffffff;
    width: 590rpx;
}

.van-card__content {
}

.van-card .van-card__bottom {
    display: flex;
}

.icon {
    position: absolute;
    right: 30rpx;
    size: 60rpx;
    bottom: 0rpx;
}

.click_content {
    height: 165rpx;
    width: 200rpx;
    z-index: 100;
    position: absolute;
    left: -200rpx;
    top: 10rpx;
}

.buy_button::before {
    content: '';
    position: absolute;
    width: 67px;
    height: 64px;
    bottom: -40rpx;
    right: 0;
    margin-top: -30px;
    margin-left: -40px;
}

.cart_title {
    font-size: 28rpx;
    font-weight: 800;
    position: relative;
    top: 10rpx;
}

.cart_price {
    font-weight: 700;
    font-size: 30rpx;
    color: #ea392c;
}

