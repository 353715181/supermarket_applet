page {
  width: 100%;
  height: 190vw;
  background-color: #ffffff;
}
page .add-address {
  position: relative;
  top: 320rpx;
  display: inline;
  text-align: center;
}
page .add-address .text {
  font-size: small;
  color: #999999;
  padding-bottom: 30rpx;
}
page .add-address .button {
  width: 420rpx;
  margin: 0 auto;
}
page .show-address .address-list {
  display: inline;
}
page .show-address .van-swipe-cell {
  margin-bottom: 15rpx 0;
}
page .show-address .van-swipe-cell .van-swipe-cell__right {
  background-color: #dd4d47;
  width: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fcf3f3;
}
page .show-address .address {
  padding: 10rpx;
  display: flex;
  border-bottom-style: solid;
  border-color: #f5f6f7;
}
page .show-address .address .address-info {
  flex: 8;
  display: flex;
}
page .show-address .address .address-info .address-radio {
  padding-right: 20rpx;
}
page .show-address .address .address-info .address-title {
  display: flex;
}
page .show-address .address .address-info .address-title .van-cell-text {
  padding-right: 20rpx;
}
page .show-address .address .address-info .address-icon {
  padding-right: 20rpx;
}
page .show-address .address .edit-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  flex: 2;
}
page .show-address .button {
  width: 70%;
  margin: 50rpx auto;
}
